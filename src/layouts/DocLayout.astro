---
import '../styles/app.css';
import { SITE } from '../config';
import ReadingProgressBar from '../components/ReadingProgressBar.astro';
import SocialShare from '../components/SocialShare.astro';

interface Props {
  title: string;
  description?: string;
  pathTitle?: string;
  currentStep?: string;
}

const {
  title,
  description = SITE.description,
  pathTitle = "System Documentation",
  currentStep
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | {SITE.title}</title>
    <style is:global>
      :root {
        --doc-sidebar-width: 280px;
        --doc-accent: #0ea5e9;
      }
      
      .doc-body {
        font-family: -apple-system, BlinkMacSystemFont, "Inter", "Segoe UI", Roboto, sans-serif;
        background: #fcfcfd;
        color: #1a1a1a;
      }

      .doc-header {
        height: 60px;
        border-bottom: 1px solid #e5e7eb;
        background: #fff;
        display: flex;
        align-items: center;
        padding: 0 1.5rem;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .doc-sidebar {
        width: var(--doc-sidebar-width);
        position: fixed;
        top: 60px;
        bottom: 0;
        left: 0;
        border-right: 1px solid #e5e7eb;
        background: #f9fafb;
        padding: 2rem 1.5rem;
        overflow-y: auto;
      }

      .doc-main {
        margin-left: var(--doc-sidebar-width);
        padding: 3rem 4rem;
        max-width: 1000px;
      }

      .doc-crumb {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #6b7280;
        margin-bottom: 0.5rem;
      }

      .doc-title {
        font-size: 2.25rem;
        font-weight: 800;
        color: #111827;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
      }

      .doc-prose {
        font-size: 1rem;
        line-height: 1.75;
        color: #374151;
      }

      .doc-prose h2 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #111827;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid #f3f4f6;
        padding-bottom: 0.5rem;
      }

      .doc-nav-item {
        display: block;
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        color: #4b5563;
        transition: all 0.2s;
        margin-bottom: 0.25rem;
        text-decoration: none;
      }

      .doc-nav-item:hover {
        background: #f3f4f6;
        color: #111827;
      }

      .doc-nav-item.active {
        background: #f0f9ff;
        color: var(--doc-accent);
      }

      .doc-version-badge {
        font-size: 0.7rem;
        background: #f3f4f6;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        color: #6b7280;
        margin-left: 0.75rem;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
      }

      @media (max-width: 1024px) {
        .doc-sidebar { display: none; }
        .doc-main { margin-left: 0; padding: 2rem 1.5rem; }
      }
    </style>
  </head>
  <body class="doc-body">
    <ReadingProgressBar />
    <header class="doc-header">
      <a href="/" class="font-bold text-gray-900 border-r border-gray-200 pr-6 mr-6 h-6 flex items-center no-underline hover:text-gray-900">
        {SITE.title}
      </a>
      <span class="text-sm font-semibold text-gray-500">{pathTitle}</span>

    </header>

    <aside class="doc-sidebar">
      <div class="mb-8">
        <h4 class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-4">Contents</h4>
        <nav>
          <slot name="sidebar" />
        </nav>
      </div>
    </aside>

    <main class="doc-main">
      <div class="doc-crumb">{pathTitle} / Core Concepts</div>
      <h1 class="doc-title">{title}</h1>
      <div class="doc-prose">
        <slot />
      </div>

      <SocialShare title={title} description={description} />
      
      <div class="mt-16 pt-8 border-t border-gray-100 flex justify-between items-center text-sm text-gray-500">
        <span>Updated 3 days ago</span>
        <div class="flex gap-4">
          <a href="#" class="hover:text-gray-900">Edit Page</a>
          <a href="#" class="hover:text-gray-900">Give Feedback</a>
        </div>
      </div>
    </main>


  </body>
</html>
