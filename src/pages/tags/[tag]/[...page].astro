---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import OptimizedImage from '../../../components/OptimizedImage.astro';
import TagCloud from '../../../components/TagCloud.astro';
import Pagination from '../../../components/Pagination.astro';
import { getPublishedPosts, slugifyTag, getPostSlug } from '../../../utils/blog';

export async function getStaticPaths({ paginate }: any) {
  const posts = await getPublishedPosts();
  const uniqueTags = [...new Set(posts.flatMap(post => post.data.tags))];

  return uniqueTags.flatMap(tag => {
    const filteredPosts = posts.filter(post => 
      post.data.tags.includes(tag)
    );
    return paginate(filteredPosts, {
      params: { tag: slugifyTag(tag) },
      props: { tagName: tag },
      pageSize: 6,
    });
  });
}

const { page, tagName } = Astro.props;
const posts = page.data;

const breadcrumbItems = [
  { name: 'Blog', url: '/blog/' },
  { name: tagName, url: `/tags/${slugifyTag(tagName)}/` }
];
---

<BaseLayout title={`Articles tagged with "${tagName}"`} description={`Guides and tutorials about ${tagName}.`}>
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid lg:grid-cols-4 gap-12">
        <div class="lg:col-span-3">
          <Breadcrumbs items={breadcrumbItems} />
          <h1 class="text-3xl md:text-4xl font-bold mb-4">
            Topic: <span class="text-accent">{tagName}</span>
          </h1>
          <p class="text-text-light mb-8">
            Searching for articles about {tagName}... Found {page.total} results.
          </p>

          {posts.length > 0 ? (
            <div class="space-y-8">
              {posts.map((post: any) => (
                <article class="bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                  <div class="md:flex">
                    {post.data.image && (
                      <div class="md:w-1/3">
                        <OptimizedImage
                          src={post.data.image}
                          alt={post.data.title}
                          class="w-full h-48 md:h-full object-cover"
                        />
                      </div>
                    )}
                    <div class="p-6 md:flex-1">
                      <div class="flex flex-wrap gap-2 mb-3">
                        {post.data.tags.map((tag: string) => (
                          <a
                            href={`/tags/${slugifyTag(tag)}/`}
                            class={`px-2 py-0.5 rounded text-xs transition-colors ${tag === tagName ? 'bg-accent text-white' : 'bg-background-alt text-text-light hover:bg-accent hover:text-white'}`}
                          >
                            {tag}
                          </a>
                        ))}
                      </div>
                      <h2 class="text-xl font-bold mb-2">
                        <a href={`/${getPostSlug(post)}/`} class="hover:text-accent transition-colors">
                          {post.data.title}
                        </a>
                      </h2>
                      <p class="text-text-light text-sm mb-4 line-clamp-2">
                        {post.data.description}
                      </p>
                      <div class="flex items-center justify-between">
                        <span class="text-text-light text-sm">
                          {post.data.publishDate.toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric'
                          })}
                        </span>
                        <a href={`/${getPostSlug(post)}/`} class="text-accent font-medium text-sm hover:underline">
                          Read more â†’
                        </a>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
              
              <Pagination page={page} />
            </div>
          ) : (
            <div class="text-center py-12 bg-background-alt rounded-xl">
              <p class="text-text-light">No posts found with this tag.</p>
            </div>
          )}
        </div>
        
        <aside class="lg:col-span-1">
          <div class="sticky top-24">
            <TagCloud />
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>
