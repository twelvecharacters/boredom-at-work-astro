---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import OptimizedImage from '../../components/OptimizedImage.astro';
import TagCloud from '../../components/TagCloud.astro';
import Pagination from '../../components/Pagination.astro';
import { getPublishedPosts } from '../../utils/blog';

export async function getStaticPaths({ paginate }: any) {
  const posts = await getPublishedPosts();
  return paginate(posts, { pageSize: 6 });
}

const { page } = Astro.props;
const posts = page.data;

const breadcrumbItems = [
  { name: 'Blog', url: '/blog/' }
];
---

<BaseLayout title={`Blog ${page.currentPage > 1 ? `- Page ${page.currentPage}` : ''}`} description="Guides, tutorials, and tips for learning AI skills during work downtime.">
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid lg:grid-cols-4 gap-12">
        <div class="lg:col-span-3">
          <Breadcrumbs items={breadcrumbItems} />
          <h1 class="text-3xl md:text-4xl font-bold mb-4">Blog</h1>
          <p class="text-text-light mb-8">
            Guides, tutorials, and tips for learning AI skills during work downtime.
          </p>

          {posts.length > 0 ? (
            <div class="space-y-8">
              {posts.map((post: any) => (
                <article class="bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                  <div class="md:flex">
                    {post.data.image && (
                      <div class="md:w-1/3">
                        <OptimizedImage
                          src={post.data.image}
                          alt={post.data.title}
                          class="w-full h-48 md:h-full object-cover"
                        />
                      </div>
                    )}
                    <div class="p-6 md:flex-1">
                      <div class="flex flex-wrap gap-2 mb-3">
                        {post.data.tags.map((tag: string) => (
                          <a
                            href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}/`}
                            class="bg-background-alt text-text-light hover:bg-accent hover:text-white px-2 py-0.5 rounded text-xs transition-colors"
                          >
                            {tag}
                          </a>
                        ))}
                      </div>
                      <h2 class="text-xl font-bold mb-2">
                        <a href={`/${post.id}/`} class="hover:text-accent transition-colors">
                          {post.data.title}
                        </a>
                      </h2>
                      <p class="text-text-light text-sm mb-4 line-clamp-2">
                        {post.data.description}
                      </p>
                      <div class="flex items-center justify-between">
                        <span class="text-text-light text-sm">
                          {post.data.publishDate.toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric'
                          })}
                        </span>
                        <a href={`/${post.id}/`} class="text-accent font-medium text-sm hover:underline">
                          Read more →
                        </a>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
              
              <Pagination page={page} />
            </div>
          ) : (
            <div class="text-center py-12 bg-background-alt rounded-xl">
              <p class="text-text-light">No posts yet. Check back soon!</p>
            </div>
          )}
        </div>
        
        <aside class="lg:col-span-1">
          <div class="sticky top-24">
            <TagCloud />
            
            <div class="mt-8 bg-primary rounded-2xl p-6 text-white overflow-hidden relative">
              <div class="absolute top-0 right-0 w-24 h-24 bg-accent/20 rounded-full -mr-12 -mt-12"></div>
              <h3 class="font-bold mb-2 relative z-10">Bored at Work?</h3>
              <p class="text-white/80 text-sm mb-4 relative z-10">
                Turn your downtime into career growth with our curated guides.
              </p>
              <a href="/productive-things-bored-at-work/" class="inline-block bg-white text-primary px-4 py-2 rounded-lg text-xs font-bold hover:bg-gray-100 transition-colors relative z-10">
                Get Started →
              </a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>
