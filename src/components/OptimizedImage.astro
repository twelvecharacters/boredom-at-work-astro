---
interface Props {
  src: string;
  alt: string;
  class?: string;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
  width?: number;
  height?: number;
  sizes?: string;
}

const { src, alt, class: className = '', loading = 'lazy', fetchpriority, width, height, sizes } = Astro.props;

// Convert jpg/png to webp path
const getWebpPath = (imagePath: string): string => {
  return imagePath.replace(/\.(jpg|jpeg|png)$/i, '.webp');
};

const webpSrc = getWebpPath(src);
const hasWebp = !src.endsWith('.webp') && !src.endsWith('.svg');
---

<picture>
  {hasWebp && (
    <source srcset={webpSrc} type="image/webp" />
  )}
  <img
    src={src}
    alt={alt}
    class={className}
    loading={loading}
    decoding={loading === 'eager' ? 'sync' : 'async'}
    fetchpriority={fetchpriority}
    width={width}
    height={height}
    sizes={sizes}
  />
</picture>
