---
import { AUTHOR } from '../config';
---

<aside class="author-bio">
  <div class="author-header">
    <div class="author-avatar">
      <span class="avatar-icon">ðŸ§ª</span>
    </div>
    <div class="author-info">
      <span class="written-by">Written by</span>
      <h3 class="author-name">{AUTHOR.name}</h3>
    </div>
  </div>

  <p class="author-description">{AUTHOR.bio}</p>

  {AUTHOR.credentials && (
    <div class="author-credentials">
      {AUTHOR.credentials.map((cred) => (
        <span class="credential-badge">
          <span class="credential-icon">{cred.icon}</span>
          <span class="credential-text">{cred.text}</span>
        </span>
      ))}
    </div>
  )}

  <div class="author-links">
    {AUTHOR.social.youtube && (
      <a href={AUTHOR.social.youtube} target="_blank" rel="noopener noreferrer" class="social-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <span>YouTube</span>
      </a>
    )}
    {AUTHOR.social.reddit && (
      <a href={AUTHOR.social.reddit} target="_blank" rel="noopener noreferrer" class="social-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
        </svg>
        <span>Reddit</span>
      </a>
    )}
    {AUTHOR.social.email && (
      <a href={`mailto:${AUTHOR.social.email}`} class="social-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="16" x="2" y="4" rx="2"/>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
        <span>Contact</span>
      </a>
    )}
  </div>
</aside>

<style>
  .author-bio {
    background: var(--color-background-alt);
    border-radius: 1rem;
    padding: 1.5rem;
    margin: 3rem 0;
    border: 1px solid var(--color-primary, #11153b);
    border-opacity: 0.1;
  }

  .author-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .author-avatar {
    width: 3.5rem;
    height: 3.5rem;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-primary) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .avatar-icon {
    font-size: 1.5rem;
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .written-by {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light);
  }

  .author-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
  }

  .author-description {
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0 0 1rem 0;
    font-size: 0.95rem;
  }

  .author-credentials {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .credential-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    background: white;
    border: 1px solid var(--color-primary, #11153b);
    border-opacity: 0.1;
    padding: 0.4rem 0.75rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    color: var(--color-text);
  }

  .credential-icon {
    font-size: 0.9rem;
  }

  .credential-text {
    font-weight: 500;
  }

  .author-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .social-link:hover {
    opacity: 0.8;
  }

  .social-link svg {
    flex-shrink: 0;
  }
</style>
