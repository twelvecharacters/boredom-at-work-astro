<button
  id="scroll-to-top"
  aria-label="Scroll to top"
  class="fixed bottom-8 right-8 z-40 bg-accent text-white p-3 rounded-full shadow-lg opacity-0 translate-y-10 transition-all duration-300 hover:bg-accent-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent pointer-events-none"
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
  </svg>
</button>

<script>
  const scrollToTopBtn = document.getElementById('scroll-to-top');

  function toggleScrollBtn() {
    if (window.scrollY > 300) {
      scrollToTopBtn?.classList.remove('opacity-0', 'translate-y-10', 'pointer-events-none');
    } else {
      scrollToTopBtn?.classList.add('opacity-0', 'translate-y-10', 'pointer-events-none');
    }
  }

  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  }

  window.addEventListener('scroll', toggleScrollBtn);
  scrollToTopBtn?.addEventListener('click', scrollToTop);
  
  // Clean up for View Transitions (if used, but good practice anyway)
  document.addEventListener('astro:before-swap', () => {
    window.removeEventListener('scroll', toggleScrollBtn);
  });
</script>
