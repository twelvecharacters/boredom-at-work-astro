---
// Pagefind Search Component
---

<link rel="stylesheet" href="/pagefind/pagefind-ui.css" />
<div id="search" class="search-container"></div>
<script is:inline>
  (function() {
    var script = document.createElement('script');
    script.src = '/pagefind/pagefind-ui.js';
    script.onload = function() {
      new PagefindUI({
        element: "#search",
        showSubResults: true,
        showImages: false,
        translations: {
          placeholder: "Search...",
          zero_results: "Nothing found"
        }
      });
    };
    document.head.appendChild(script);
  })();
</script>

<style is:global>
  /* Search container - fixed width */
  .search-container {
    position: relative;
    width: 200px !important;
    max-width: 200px !important;
    min-width: 200px !important;
    flex-shrink: 0 !important;
    flex-grow: 0 !important;
  }

  /* Pagefind UI variables */
  .search-container {
    --pagefind-ui-scale: 0.8;
    --pagefind-ui-primary: #8b5cf6;
    --pagefind-ui-text: #1e1b4b;
    --pagefind-ui-background: white;
    --pagefind-ui-border: #2d1f4a;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 8px;
  }

  /* Constrain all inner elements */
  .search-container .pagefind-ui {
    width: 100% !important;
  }

  .search-container .pagefind-ui__form {
    position: relative;
    width: 100% !important;
    max-width: 100% !important;
  }

  /* Style the search input for dark header */
  .search-container .pagefind-ui__search-input {
    background-color: rgba(255, 255, 255, 0.15) !important;
    color: white !important;
    border: 1px solid rgba(255, 255, 255, 0.3) !important;
    width: 100% !important;
    max-width: 100% !important;
    box-sizing: border-box !important;
  }

  .search-container .pagefind-ui__search-input:focus {
    background-color: rgba(255, 255, 255, 0.25) !important;
  }

  .search-container .pagefind-ui__search-input::placeholder {
    color: rgba(255, 255, 255, 0.7) !important;
  }

  /* Search button/icon */
  .search-container .pagefind-ui__search-clear {
    color: white !important;
  }

  /* Results dropdown */
  .search-container .pagefind-ui__drawer {
    position: absolute;
    right: 0;
    top: 100%;
    margin-top: 0.5rem;
    background: white !important;
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    min-width: 300px;
    max-width: 400px;
    max-height: 70vh;
    overflow-y: auto;
    z-index: 1000;
  }

  .search-container .pagefind-ui__result-title {
    color: #1e1b4b;
    font-weight: 600;
  }

  .search-container .pagefind-ui__result-link:hover {
    background-color: #f5f6ff;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .search-container {
      width: 100px !important;
      max-width: 100px !important;
      min-width: 100px !important;
    }

    .search-container .pagefind-ui__drawer {
      position: fixed;
      left: 1rem;
      right: 1rem;
      top: 60px;
      min-width: auto;
      max-width: none;
    }
  }
</style>
